classDiagram
class PresentationLayer {
    <<Interface>>
    +registerUser()
    +createPlace()
    +getPlaceDetails()
    +listPlaces()
    +submitReview()
}
class BusinessLogicLayer {
    +UserModel
    +PlaceModel
    +ReviewModel
    +AmenityModel
    +FacadeInterface
}
class PersistenceLayer {
    +UserRepository
    +PlaceRepository
    +ReviewRepository
    +AmenityRepository
}

PresentationLayer --> BusinessLogicLayer : Facade Pattern
BusinessLogicLayer --> PersistenceLayer : Database Operations
